@model Aula04Out24.Models.Cliente

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/IMG/Login/Morango - icon.png" type="image/x-icon">
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/Login.css" />
    <title>Login - Morangos da Cidade</title>
</head>

<script>
    $(document).ready(function () {
        @if (TempData["ToastrMessage"] != null)
        {
            <text>
                toastr["@TempData["ToastrType"]"]("@TempData["ToastrMessage"]");
            </text>
        }
    });
</script>

<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">

                <!-- Formulário de Login -->
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "sign-in-form" }))
                {
                    <h2 class="title">Login</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        @Html.TextBoxFor(model => model.EmailCliente, new { @class = "form-control", placeholder = "Usuário", required = "required" })
                        <div>
                            @Html.ValidationMessageFor(model => model.EmailCliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        @Html.PasswordFor(model => model.SenhaCliente, new { @class = "form-control", placeholder = "Senha", required = "required" })
                        <div>
                            @Html.ValidationMessageFor(model => model.SenhaCliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <input type="submit" value="Login" class="btn solid" />
                }

                <!-- Formulário de Cadastro -->
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "sign-up-form" }))
                {
                    <h2 class="title">Cadastre-se</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        @Html.TextBoxFor(model => model.NomeCliente, new { @class = "form-control", placeholder = "Nome", required = "required" })
                        @Html.ValidationMessageFor(model => model.NomeCliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        @Html.TextBoxFor(model => model.EmailCliente, new { @class = "form-control", placeholder = "E-mail", required = "required" })
                        @Html.ValidationMessageFor(model => model.EmailCliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field">
                        <i class="fas fa-calendar"></i>
                        @Html.TextBoxFor(model => model.DataDeNascimentoCliente, new { @class = "form-control", placeholder = "Data de nascimento (DD/MM/AAAA)", required = "required" })
                        @Html.ValidationMessageFor(model => model.DataDeNascimentoCliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field">
                        <i class="fas fa-id-card"></i>
                        @Html.TextBoxFor(model => model.CPFCliente, new { @class = "form-control", placeholder = "CPF", required = "required" })
                        @Html.ValidationMessageFor(model => model.CPFCliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field">
                        <i class="fas fa-phone"></i>
                        @Html.TextBoxFor(model => model.TelefoneCliente, new { @class = "form-control", placeholder = "Telefone", required = "required" })
                        @Html.ValidationMessageFor(model => model.TelefoneCliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        @Html.PasswordFor(model => model.SenhaCliente, new { @class = "form-control", placeholder = "Senha", required = "required" })
                        @Html.ValidationMessageFor(model => model.SenhaCliente, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" class="btn" value="Cadastre-se" />
                }
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Novo aqui?</h3>
                    <p>Cadastre-se com segurança e proteção de dados. Saiba mais clicando aqui!</p>
                    <button class="btn transparent" id="sign-up-btn">Cadastre-se</button>
                </div>
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Já tem uma conta?</h3>
                    <p>Inicie sessão agora para acessar rapidamente sua conta e todas as suas informações</p>
                    <button class="btn transparent" id="sign-in-btn">Login</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/Login.js"></script>
</body>
</html>
